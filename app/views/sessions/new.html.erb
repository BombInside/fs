

<link href="css/signin.css" rel="stylesheet">

<%= form_tag sessions_path,  :class => "form-signin" do %>
<h2 class="form-signin-heading">Войдите в Систему</h2>
<div class="form-group">
  <p>  <%= label_tag 'email','Email' %></p>
<%= text_field_tag 'email',nil , class: "form-control" %>
</div>

<div class="form-group">
  <p>	<%= label_tag 'password', 'Password' %></p>
	<%= password_field_tag 'password',nil, class: "form-control" %>
</div>

<%= submit_tag 'Войти', class: 'btn btn-lg btn-primary btn-block' %>

<% end %>
