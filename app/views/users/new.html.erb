<%= form_for @i, :url => users_path, :html => { :multipart => true } do |f| %>
  <div class="form-group">
  <%= f.label "Имя" %>:
  <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label "Email" %>:
  <%= f.text_field :email, :class => "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label "Password" %>:
    <%= f.text_field :password, :class => "form-control", :type => "password"  %>
</div>

<div class="form-group">
  <%= f.label "Password Confirm"  %>
  <%= f.text_field :password_confirmation, :class => "form-control", :type => "password"  %>

</div>



  <div class="form-group">
  <%= f.label "Телефон" %>:
  <%= f.text_field :phone, :class => "form-control"  %>
  </div>
  <div class="form-group">
  <%= f.label "Страна" %>:
  <%= f.text_field :country, :class => "form-control"  %>
</div>
  <%= f.submit "Создать", :class => "btn btn-default" %>

<% end %>
