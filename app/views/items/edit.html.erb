<%= form_for @i do |f| %>
 <%= f.label "Имя" %>:
  <p><%= f.text_field :name %></p><br />
 <%= f.label "Цена" %>:
  <p><%= f.text_field :price %></p><br />
<%= f.label "Вес" %>:
  <p><%= f.text_field :weigth %></p><br />

<%= f.label "Видимый" %>:
  <p><%= f.text_field :real %></p><br />
<%= f.label "Краткое описание" %>:
